<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
   version="2.0">
   
	<render-kit>
	  	<render-kit-id>HTML_BASIC</render-kit-id>
      	<render-kit-class>owasp.ejsf.unifreiburg.renderkit.EsapiHtmlRenderKitImpl</render-kit-class> 
      	  
  		<renderer>
      		<component-family>javax.faces.Input</component-family>
      		<renderer-type>javax.faces.Text</renderer-type>
      		<renderer-class>owasp.ejsf.unifreiburg.renderkit.EsapiTextRenderer</renderer-class>
  		</renderer>
		
		<renderer>
      		<component-family>javax.faces.OutcomeTarget</component-family>
      		<renderer-type>javax.faces.Link</renderer-type>
      		<renderer-class>owasp.ejsf.unifreiburg.renderkit.EsapiOutputLinkRenderer</renderer-class>
  		</renderer>
	</render-kit>
	 
	<application>
        <system-event-listener>
            <system-event-listener-class>owasp.ejsf.unifreiburg.xss.PreRenderViewListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PreRenderViewEvent</system-event-class>
        </system-event-listener>
    </application>
     
</faces-config>
